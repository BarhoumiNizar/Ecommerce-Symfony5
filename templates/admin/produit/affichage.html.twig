                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Prix</th>
                                            <th>Promotion</th>
                                            <th>Description</th>
                                            <th>Photos</th>
                                            <th>Modifier</th>
                                            <th>Suprimer</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Prix</th>
                                            <th>Promotion</th>
                                            <th>Description</th>
                                            <th>Photos</th>
                                            <th>Modifier</th>
                                            <th>Suprimer</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                    {% for produit in produits %}
                                        <tr>
                                            <td>{{ produit.nom }}</td>
                                            <td>{{ produit.prix }} â‚¬</td>
                                            <td>{{ produit.promotion }} %</td>
                                            <td>{{ produit.description }}</td>
                                            <td>
                                            {% for photo in produit.photos %}
                                                <img src="{{asset('img-produit/' ~ photo)}}" alt="" style="height:50px;">
                                            {% endfor %}
                                            </td>
                                            <td><a href="{{ path('ajoutProduit', {id:produit.id}) }}">Modifier</a></td>
                                            <td><a href="{{ path('supprimerProduit', {id:produit.id}) }}">Suprimer</a></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
{% endblock %}